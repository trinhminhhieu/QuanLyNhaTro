<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dinhvu.quanlynhatro.View.DoimatkhauActivity">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <EditText android:id="@+id/dmkMKcu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <EditText android:id="@+id/dmkMKmoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nhập mật khẩu mới"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <EditText android:id="@+id/dmkXNMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận lại mật khẩu mới"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatButton
        android:onClick="Xacnhan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="14dp"
        android:padding="12dp"
        android:text="Xác nhận"/>
    <android.support.v7.widget.AppCompatButton
        android:onClick="huy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff9720"
        android:textColor="#ffffff"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="hủy bỏ"/>

</LinearLayout>
