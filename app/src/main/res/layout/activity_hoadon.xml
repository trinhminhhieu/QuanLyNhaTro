<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dinhvu.quanlynhatro.View.HoadonActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <EditText android:id="@+id/editTexttkngaybatdau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_weight="1"
                android:hint="Từ ngày"/>
            <EditText android:id="@+id/editTexttkngayketthuc"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Đến ngày"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonsignup"
            android:onClick="thongke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#170bfa"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:text="thống kê"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lst_hoadon">

    </ListView>
</LinearLayout>
